output "Chimei Innolux Corporation P140ZKA-BZ1 Unknown" {
  mode 2160x1440@60Hz
  position 0,0
  scale 1
  alias $LAPTOP
}

profile homeOffice {
	output DP-1 enable mode 3440x1440@99.988998Hz position 0,0
	output DP-3 enable mode 2560x1440@59.951000Hz position -2560,0
}

profile laptop {
	output DP-1 enable mode 2160x1440@60Hz position 0,0 scale 1.0
}

profile laptop2 {
	output $LAPTOP enable
}

